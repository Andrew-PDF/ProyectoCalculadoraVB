Public Class Form1

    Private Sub Button1_Click(sender As Object, e As EventArgs) Handles Button1.Click
        Dim num1 As Double
        Dim num2 As Double
        Dim resultado As Double

        If Double.TryParse(TextBox1.Text, num1) And Double.TryParse(TextBox2.Text, num2) Then
            resultado = num1 + num2
            Label3.Text = "La Suma es: " & resultado.ToString()
        Else
            MessageBox.Show("Por favor, introduce números válidos.", "Error", MessageBoxButtons.OK, MessageBoxIcon.Error)
        End If
    End Sub

    Private Sub Button2_Click(sender As Object, e As EventArgs) Handles Button2.Click
        Dim num1 As Double
        Dim num2 As Double
        Dim resultado As Double

        If Double.TryParse(TextBox1.Text, num1) And Double.TryParse(TextBox2.Text, num2) Then
            resultado = num1 - num2
            Label3.Text = "La Resta es: " & resultado.ToString()
        Else
            MessageBox.Show("Por favor, introduce números válidos.", "Error", MessageBoxButtons.OK, MessageBoxIcon.Error)
        End If
    End Sub

End Class
