Public Class Form1

    Private Sub Button1_Click(sender As Object, e As EventArgs) Handles Button1.Click
        ' Declarar variables para los números y el resultado
        Dim num1 As Double
        Dim num2 As Double
        Dim resultado As Double

        ' Intentar convertir el texto de los cuadros de texto a números.
        ' Es buena práctica usar TryParse para manejar posibles errores de entrada.
        If Double.TryParse(TextBox1.Text, num1) And Double.TryParse(TextBox2.Text, num2) Then

            ' Realizar la operación de suma
            resultado = num1 + num2

            ' Mostrar el resultado en una etiqueta
            Label3.Text = "La Suma es: " & resultado.ToString()

        Else
            ' Mostrar un mensaje de error si la entrada no es válida
            MessageBox.Show("Por favor, introduce números válidos en ambos campos.", "Error de Entrada", MessageBoxButtons.OK, MessageBoxIcon.Error)
            Label3.Text = "Error"
        End If

    End Sub

End Class
